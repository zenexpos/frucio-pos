{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "photoURL": { "type": "string", "format": "uri" }
      }
    },
    "Customer": {
      "title": "Customer",
      "description": "Represents a customer with their balance and details.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "balance": { "type": "number" },
        "settlementDay": { "type": "string" }
      },
      "required": ["name", "phone", "createdAt", "balance"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a financial transaction (debt or payment) for a customer.",
      "type": "object",
      "properties": {
        "customerId": { "type": "string" },
        "type": { "type": "string", "enum": ["debt", "payment"] },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "orderId": { "type": "string" }
      },
      "required": ["customerId", "type", "amount", "date", "description"]
    },
    "BreadOrder": {
      "title": "Bread Order",
      "description": "Represents a daily bread order.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "quantity": { "type": "number" },
        "unitPrice": { "type": "number" },
        "totalAmount": { "type": "number" },
        "isPaid": { "type": "boolean" },
        "isDelivered": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "isPinned": { "type": "boolean" },
        "customerId": { "type": "string" },
        "customerName": { "type": "string" }
      },
      "required": ["name", "quantity", "unitPrice", "totalAmount", "isPaid", "isDelivered", "createdAt", "isPinned"]
    },
    "AppSettings": {
      "title": "App Settings",
      "description": "Global settings for the application.",
      "type": "object",
      "properties": {
        "breadUnitPrice": { "type": "number" }
      },
      "required": ["breadUnitPrice"]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile data."
    },
    "/users/{userId}/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Stores customer data for a specific user."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores all transactions for a specific user."
    },
    "/users/{userId}/breadOrders/{orderId}": {
      "schema": { "$ref": "#/entities/BreadOrder" },
      "description": "Stores bread order data for a specific user."
    },
    "/users/{userId}/settings/config": {
        "schema": { "$ref": "#/entities/AppSettings" },
        "description": "Stores app-specific settings for a user, like bread price."
    }
  }
}
